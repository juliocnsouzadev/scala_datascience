package week2

object Currying {
  
  def sum (f: Int => Int): (Int, Int) => Int = {
  	def sumF(x: Int, y: Int): Int =
  		if (x > y) 0
  		else f(x) + sumF(x + 1, y)
  	sumF
  }
  
  def fact(v: Int): Int = if (v == 0) 1 else fact(v - 1)
  
  def sumOfIntegers = sum(v => v)
	def sumOfCubes  = sum(v => v * v * v)
	def sumOfFactorials = sum(fact)
	
	sumOfCubes(2, 5)
	sumOfFactorials(2,6)
	
	def justSum(x: Int, y:Int):Int = x + y
	justSum(sumOfCubes(3,8), sumOfFactorials(10,20))
	
	def cube(v: Int): Int = v * v * v
	
	sum(cube)(5,12)
  
  
    //SHOTER FORM
  def sumS(f: Int => Int)(x: Int, y: Int): Int =
		if (x > y) 0 else f(x) + sum(f)(x + 1, y)
                                                                                             
}