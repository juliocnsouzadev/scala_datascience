package week4.primitives

abstract class Boolean {
  
  def ifThenElse[T](t: => T, f: => T) : T
  
  def && (x: => Boolean): Boolean =
     ifThenElse(x, False)
     
  def || (x: => Boolean): Boolean =
       ifThenElse(False, x)
       
  def unary_! : Boolean =
    ifThenElse(False, True)
    
  def == (x: Boolean): Boolean = 
    ifThenElse(x, x.unary_!)
  
  def != (x: Boolean): Boolean = 
    ifThenElse(x.unary_!, x)
  
  def < (x: Boolean): Boolean =
    ifThenElse(False, x)
    
  def > (x: Boolean): Boolean = 
    ifThenElse(x, False)
}