package week6

object maps {
  val romanNumerals = Map("I" -> 1, "II" -> 2, "III" -> 3 , "IV" -> 4, "V" -> 5)
                                                  //> romanNumerals  : scala.collection.immutable.Map[String,Int] = Map(II -> 2, I
                                                  //| V -> 4, I -> 1, V -> 5, III -> 3)
  val capitalOfCountry = Map("Brazil" -> "Brasilia", "Switzerland" -> "Bern")
                                                  //> capitalOfCountry  : scala.collection.immutable.Map[String,String] = Map(Braz
                                                  //| il -> Brasilia, Switzerland -> Bern)

	capitalOfCountry get "Brazil"             //> res0: Option[String] = Some(Brasilia)
	
	val names = Vector("Julio", "Rafael", "Wellington", "Carlos", "Marcelo")
                                                  //> names  : scala.collection.immutable.Vector[String] = Vector(Julio, Rafael, W
                                                  //| ellington, Carlos, Marcelo)
	
	names sortWith (_.length < _.length)      //> res1: scala.collection.immutable.Vector[String] = Vector(Julio, Rafael, Carl
                                                  //| os, Marcelo, Wellington)
                                                  
  names sorted                                    //> res2: scala.collection.immutable.Vector[String] = Vector(Carlos, Julio, Marc
                                                  //| elo, Rafael, Wellington)
	names groupBy (_.head)

}
